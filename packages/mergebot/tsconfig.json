{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "module": "commonjs",
        "allowJs": true,
        "target": "es2022",
        "lib": ["es2022"],
        "esModuleInterop": true,
        "types": ["node"],
        "sourceMap": true,
        "resolveJsonModule": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["src/**/*.mjs"]
}
